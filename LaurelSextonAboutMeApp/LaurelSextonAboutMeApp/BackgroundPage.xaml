<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="LaurelSextonAboutMeApp.BackgroundPage"
             Title="About Me">

    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="About Me" Style="{StaticResource HeaderLabelStyle}"/>
            <Label Text="Hello! I am a 2020 Miami University software engineering grad! 
                   after taking a mobile app development course in college I discovered my
                   passion for developing apps. Hope you enjoy my first app!" Style="{StaticResource LabelStyle}"></Label>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
